{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist"]
}
